        <class>info.microdev.entidad.Empleado</class>
        <class>info.microdev.entidad.FacturaCabecera</class>
        <class>info.microdev.entidad.FacturaDetalle</class>
        <class>info.microdev.entidad.Paciente</class>
        <class>info.microdev.entidad.Producto</class>
        <class>info.microdev.entidad.Proveedor</class>
        <class>info.microdev.entidad.RegistroMedico</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
