        <jta-data-source>jdbc/_clinica</jta-data-source>
        <class>ec.edu.ups.entidad.Persona</class>
        <class>ec.edu.ups.entidad.Medico</class>
        <class>ec.edu.ups.entidad.Cita</class>
        <class>ec.edu.ups.entidad.HistoriaClinica</class>
        <class>ec.edu.ups.entidad.HistorialClinico</class>
        <class>ec.edu.ups.entidad.OrdenMedica</class>
        <class>ec.edu.ups.entidad.Paciente</class>
        <class>ec.edu.ups.entidad.Prescripcion</class>
        <class>ec.edu.ups.entidad.Rol</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
